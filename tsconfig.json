{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2023"],
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@int/schema": ["./packages/schema"],
      "@int/api": ["./packages/nuxt-layer-api"],
      "@int/ui": ["./packages/nuxt-layer-ui"]
    }
  },
  "include": [],
  "exclude": [
    "node_modules",
    "dist",
    ".nuxt",
    ".output"
  ]
}
