# Session & Authentication
# Generate with: openssl rand -base64 32
NUXT_SESSION_PASSWORD=your-super-secret-password-with-at-least-32-characters

# Google OAuth (for user authentication)
NUXT_OAUTH_GOOGLE_CLIENT_ID=your_google_client_id
NUXT_OAUTH_GOOGLE_CLIENT_SECRET=your_google_client_secret

# Database
# Production: PostgreSQL connection string
# Development: defaults to local Postgres if not set
NUXT_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/resume_editor

# LLM Providers (platform keys)
NUXT_LLM_OPENAI_API_KEY=sk-...
NUXT_LLM_GEMINI_API_KEY=AIza...
NUXT_LLM_FALLBACK_PROVIDER=openai
NUXT_LLM_FALLBACK_MODEL=gpt-4.1-mini
NUXT_LLM_FALLBACK_PRICE_INPUT=0.4
NUXT_LLM_FALLBACK_PRICE_OUTPUT=1.6
NUXT_LLM_FALLBACK_PRICE_CACHE=0

# Vercel Blob Storage (for PDF exports)
# Auto-detected on Vercel, optional in development
NUXT_STORAGE_BLOB_READ_WRITE_TOKEN=vercel_blob_rw_your_token_here
# Optional: custom base URL for local storage links
NUXT_STORAGE_BASE_URL=http://localhost:3000/api/storage
# Optional: custom base directory for local storage
NUXT_STORAGE_BASE_DIR=/absolute/path/to/storage

# Node Environment
NODE_ENV=development
