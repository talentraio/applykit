# apps/site environment variables
# Copy to apps/site/.env for local development.

# Session & Authentication (required)
# Generate with: openssl rand -base64 32
NUXT_SESSION_PASSWORD=your-super-secret-password-with-at-least-32-characters
NUXT_OAUTH_GOOGLE_CLIENT_ID=your_google_client_id
NUXT_OAUTH_GOOGLE_CLIENT_SECRET=your_google_client_secret

# Database (required in production; optional in development)
NUXT_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/resume_editor

# LLM Providers (optional; required for platform LLM mode)
NUXT_LLM_OPENAI_API_KEY=sk-...
NUXT_LLM_GEMINI_API_KEY=AIza...

# Storage (optional; used for Vercel Blob in production)
NUXT_STORAGE_BLOB_READ_WRITE_TOKEN=vercel_blob_rw_your_token_here
NUXT_STORAGE_BASE_URL=http://localhost:3000/storage
NUXT_STORAGE_BASE_DIR=/absolute/path/to/storage

# Public App URL (required in production; Vercel sets VERCEL_URL for previews)
NUXT_PUBLIC_APP_URL=http://localhost:3002

# Node Environment (optional)
NODE_ENV=development
